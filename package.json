{
  "name": "express-graphql-server",
  "version": "1.0.0",
  "description": "A nodejs server build with express and graphql.",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "start:local": "LOCAL=true NODE_PATH='./src' nodemon --watch 'src/**' --ext 'ts,json' --exec 'ts-node ./src/index.ts'",
    "build": "tsc",
    "start": "yarn build && NODE_PATH='./dist' pm2 start ./dist/index.js -i 2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uniquemo/express-graphql-server.git"
  },
  "keywords": [],
  "author": "uniquemo(uniquemo233@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uniquemo/express-graphql-server/issues"
  },
  "homepage": "https://github.com/uniquemo/express-graphql-server#readme",
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/graphql": "^14.5.0",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@sentry/node": "^6.7.1",
    "@sentry/tracing": "^6.7.1",
    "apollo-server-express": "^2.25.1",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.5.0"
  }
}
